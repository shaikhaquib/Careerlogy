<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.DIS.careerlogy.AdminDash">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/toolbartext"
            android:layout_weight="1"
            android:textSize="32dp"
            android:text="Admin"/>
        <TextView
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/toolbartext"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/roboto_light"
            android:layout_gravity="center_vertical"
            android:textColor="#FF5722"
            android:text="Logout"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_margin="24dp">

        <LinearLayout
            android:id="@+id/adminStudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:strokeColor="#c2c2c2"
                app:cardElevation="8dp"
                android:padding="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="6dp"
                app:strokeWidth="1dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="24dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/ic_student"/>


            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Student"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/adminEntrepreneur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:strokeColor="#c2c2c2"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="4dp"
                app:cardElevation="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:strokeWidth="1dp">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:padding="8dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:tint="@color/colorPrimary"
                    android:layout_margin="24dp"
                    android:src="@drawable/ic_business"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Entrepreneur"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:gravity="center"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="4dp"
        android:orientation="vertical">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/adminUploadDocument"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            app:iconPadding="16dp"
            app:iconSize="32dp"
            android:gravity="start|center"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:text="Upload Document"
            app:cornerRadius="8dp"
            app:iconGravity="start"
            app:icon="@drawable/ic_file_attach"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/adminUploadTestimonial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            app:iconPadding="16dp"
            android:gravity="start|center"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:text="Upload Testimonials Video"
            app:iconSize="32dp"
            app:cornerRadius="8dp"
            app:iconGravity="start"
            app:icon="@drawable/ic_video"/>


    </LinearLayout>



</LinearLayout>